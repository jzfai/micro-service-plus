#macro(insertReq)
const insertReq = () => {
    const data = JSON.parse(JSON.stringify(subForm))
    delete data.id
    axiosReq({
        url: '${apiConfig.insertApi}',
        data: data,
        method: '${apiConfig.insertApiType}',
        bfLoading: true
    }).then(() => {
        elMessage('保存成功')
        emit('selectPageReq')
        emit('hideComp')
    })
}
